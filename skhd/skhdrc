# focus window
alt - h : yabai -m window --focus west
alt - n : yabai -m window --focus south
alt - e : yabai -m window --focus north
alt - i : yabai -m window --focus east

# focus desktop
# alt - h : yabai -m display --focus next
# alt - y : yabai -m display --focus previous
# ctrl + alt - 1 : yabai -m display --focus 1
# ctrl + alt - 2 : yabai -m display --focus 2
# ctrl + alt - 3 : yabai -m display --focus 3
# ctrl + alt - 4 : yabai -m display --focus 4

# # focus space
# ctrl - 1 : yabai -m space --focus 1 
# ctrl - 2 : yabai -m space --focus 2 
# ctrl - 3 : yabai -m space --focus 3 
# ctrl - 4 : yabai -m space --focus 4 
# ctrl - 5 : yabai -m space --focus 5 
# ctrl - 6 : yabai -m space --focus 6 
# ctrl - 7 : yabai -m space --focus 7 
# ctrl - 8 : yabai -m space --focus 8 
# ctrl - 9 : yabai -m space --focus 9 

# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - n : yabai -m window --swap south
shift + alt - e : yabai -m window --swap north
shift + alt - i : yabai -m window --swap east

# move managed window
shift + alt + ctrl - h : yabai -m window --warp west
shift + alt + ctrl - n : yabai -m window --warp south
shift + alt + ctrl - e : yabai -m window --warp north
shift + alt + ctrl - i : yabai -m window --warp east

# rotate tree
alt - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# alt - d : yabai -m window --toggle
alt - d : yabai -m window --toggle sticky;\
          yabai -m window --toggle topmost;\
          yabai -m window --toggle pip

# toggle padding and gap
alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle window split type
alt - a : yabai -m window --toggle split

# balance size of windows
shift + alt - t : yabai -m space --balance

# move window and focus desktop
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space 8; yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space 9; yabai -m space --focus 9


# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
shift + alt - o : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                   yabai -m window --space "${index}" && \
                   yabai -m space --focus "${index}"

# fast focus desktop
alt - tab : yabai -m space --focus recent

# focus other monitor
ctrl + alt - n : yabai -m display --focus next
ctrl + alt - e : yabai -m display --focus prev
